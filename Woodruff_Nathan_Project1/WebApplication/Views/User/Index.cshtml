@model WebApplication.Models.Users


@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <span style="color:red">*</span>

                <input asp-for="Username" class="form-control" autocomplete="off" />

                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <span style="color:red">*</span>

                <input asp-for="Password" class="form-control" autocomplete="off" />

                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <span style="color:red">*</span>

                @Html.DropDownList("Location",
                    new SelectList(Enum.GetValues(typeof(Location))),
                    "Select Location",
                    new { @class = "form-control" })

                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>